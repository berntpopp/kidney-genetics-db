  "mapping_rules": {
    "description": "How our internal schema maps to GenCC submission requirements",
    "mappings": [
      {
        "gencc_field": "gene_id",
        "our_field": "hgnc_id",
        "validation": "Must match pattern ^HGNC:[0-9]+$"
      },
      {
        "gencc_field": "classification_label", 
        "our_field": "disease_associations[].clinical_validity",
        "allowed_values": ["Definitive", "Strong", "Moderate", "Limited", "Disputed Evidence", "Refuted Evidence", "No Known Disease Relationship", "Animal Model Only"]
      },
      {
        "gencc_field": "disease_id",
        "our_field": "disease_associations[].disease_id", 
        "note": "Prefers MONDO IDs, accepts OMIM/Orphanet"
      },
      {
        "gencc_field": "submitted_as_disease_id",
        "our_field": "disease_associations[].submitted_disease_id",
        "note": "Original disease ID if different from standardized"
      },
      {
        "gencc_field": "mode_of_inheritance_id",
        "our_field": "disease_associations[].mode_of_inheritance",
        "note": "Must use HPO terms"
      },
      {
        "gencc_field": "assertion_date",
        "our_field": "disease_associations[].assertion_date",
        "validation": "Date when gene-disease validity was evaluated"
      }
    ]
  },

